    "protocols": {
      "name": "URL protocol schemes",
      "schemes": [
        "bitcoin",
        "bitcoincash",
        "bchtest",
        "bitcoindiamond",
        "bcdpay"
      ]
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://wallet.bitcoindiamond.org/static"
      }
    ],
    "mac": {
      "category": "public.app-category.finance",
      "icon": "resources/bcdpay/mac/app.icns",
      "artifactName": "${productName}.${ext}",
      "extendInfo": {
        "NSCameraUsageDescription": "Scan a Bitcoin Address directly to your Wallet and send funds to it"
      },
      "target": [
        "mas"
      ]
    },
    "mas": {
      "identity": "BitPay, Inc. (884JRH5R93)",
      "entitlements": "./bcdpay-entitlements.mas.plist",
      "provisioningProfile": "./bcdpay-embedded.provisionprofile"
    },
    "win": {
      "target": [
        "NSIS"
      ],
      "icon": "resources/bcdpay/windows/icon.ico",
      "artifactName": "${productName}-setup.exe"
    },
    "appx": {
      "identityName": "18C7659D.CopayforWindows",
      "publisher": "CN=F89609D1-EB3E-45FD-A58A-C2E3895FCE7B",
      "publisherDisplayName": "BitPay Inc.",
      "applicationId": "BCDPayforWindows",
      "displayName": "BCDPay for Windows"
    },
    "linux": {
      "target": [
        "snap"
      ],
      "artifactName": "${productName}-linux.${ext}"
    }
  },
