  "title": "BCDPay",
  "user-agent": "%name %ver (%osinfo)",
  "webkit": {
    "page-cache": false,
    "java": false,
    "plugin": false
  },
  "dom_storage_quota": 200,
  "id": "jid1-x7bV5evAaI1P9Q",
  "homepage": "https://chimpion.io",
  "license": "MIT",
  "repository": {
    "url": "git://github.com/bitpay/copay.git",
